    "Casa": "House", "Coche": "Car", "Ciudad": "City", "País": "Country", "Trabajo": "Job", 
    "Escuela": "School", "Dinero": "Money", "Tiempo": "Time", "Día": "Day", "Noche": "Night", 
    "Agua": "Water", "Comida": "Food", "Familia": "Family", "Amigo": "Friend", "Amor": "Love", 
